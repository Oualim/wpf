<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:local="clr-namespace:TpFormulaireLogin">

    <ImageBrush x:Key="backgroundImage" ImageSource="free.png" Opacity="0.5" />


    <Style TargetType="TextBlock" x:Key="bigText">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="FontFamily" Value="Verdana" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style TargetType="TextBox" x:Key="myTextBox">
        <Setter Property="FontFamily" Value="Verdana" />
        <Setter Property="FontWeight" Value="DemiBold" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="MinLines" Value="1" />
        <Setter Property="MaxLines" Value="1" />
        <Setter Property="Margin" Value="10" />
    </Style>

    <Style TargetType="PasswordBox" x:Key="myPassBox">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="Margin" Value="10" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontFamily" Value="Verdana" />
        <Setter Property="FontWeight" Value="DemiBold" />
    </Style>
</ResourceDictionary>
